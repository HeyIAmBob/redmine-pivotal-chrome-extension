{
  "name" : "PivotalMine : Custom integration between Redmine and Pivotal",
  "version" : "1.0",
  "description" : "Do more action between Redmine and Pivotal",
  "permissions": [
    "activeTab",
    "webNavigation",
    "*://*/",
    "storage"
  ],
  "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html",
     "default_title": "Make this page red"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "manifest_version": 2
}
