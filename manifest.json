{
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "version" : "1.0",
  "default_locale": "fr",
  "permissions": [
    "activeTab",
    "webNavigation",
    "*://*/",
    "storage"
  ],
  "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html",
     "default_title": "Make this page red"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["PivotalTracker.js","RedmineUI.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "manifest_version": 2
}
